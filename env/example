require('dotenv').config();

const port = process.env.PORT || 3000;
const visitorSimEnabled = process.env.SIMULATION_ENABLED === 'true';

# .env.example for QuantumTrader-AI

# Port the server should run on
PORT=3000

# API keys (if any) or other secret tokens
API_KEY=your_api_key_here

# Feature flags
ENABLE_LOGGING=true
ENABLE_VISITOR_SIMULATION=true

# Backup and auto-commit settings
AUTO_COMMIT=true
BACKUP_INTERVAL_MINUTES=5

# .env.example
# Copy this file to ".env" and fill in the actual values.
# DO NOT commit the real ".env" file with secrets.

# Application environment
NODE_ENV=development
PORT=3000

# Admin secret token for accessing hidden stats
ADMIN_TOKEN=changeme_admin_token

# Database or storage config (if used later)
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASS=changeme_password

# Analytics (optional future use)
