#!/bin/bash
# Master Generator Script for QT AI Modules
# Extended with login monitoring, echo, auto-logging, 12-hour log rotation, and archive index

LOG_DIR="logs"
LOG_FILE="$LOG_DIR/commands.log"
INDEX_FILE="$LOG_DIR/index.txt"

# Ensure logs directory exists
mkdir -p "$LOG_DIR"

# Rotate logs every 12 hours
rotate_logs() {
  local now=$(date +%s)
  local last_rotate_file="$LOG_DIR/.last_rotate"

  # If file doesnâ€™t exist, create it
  if [[ ! -f "$last_rotate_file" ]]; then
    echo "$now" > "$last_rotate_file"
    return
  fi

  local last_rotate=$(cat "$last_rotate_file")
  local elapsed=$(( (now - last_rotate) / 3600 )) # elapsed hours

  if (( elapsed >= 12 )); then
    local timestamp=$(date '+%Y%m%d_%H%M%S')
    local rotated_file="$LOG_DIR/commands_$timestamp.log"

    mv "$LOG_FILE" "$rotated_file" 2>/dev/null
    echo "$now" > "$last_rotate_file"
    echo "â™»ï¸ Log rotated at $timestamp" | tee -a "$LOG_FILE"

    # Update archive index
    echo "$timestamp -> $rotated_file" >> "$INDEX_FILE"
  fi
}

# Function to log and echo commands
log_and_echo() {
  rotate_logs
  local msg="$1"
  echo "$msg" | tee -a "$LOG_FILE"
}

echo "ğŸ”µ QT AI Master Generator Script Started"
echo "ğŸ“‚ Logging commands to $LOG_FILE"
echo "ğŸ“‘ Archive index: $INDEX_FILE"

# Normal module generation
generate_modules() {
  log_and_echo "âš™ï¸ Generating all QT AI modules..."
  # Placeholder: actual generation steps
  sleep 1
  log_and_echo "âœ… All modules generated successfully."
}

# Watch mode for continuous login monitoring
watch_mode() {
  log_and_echo "ğŸ‘€ Watch mode activated: monitoring login and command codes..."
  while true; do
    # Simulate login monitoring with timestamp
    log_and_echo "â±ï¸ Login check at $(date '+%Y-%m-%d %H:%M:%S')"
    # Echo all command codes (stub)
    log_and_echo "ğŸ’» Command executed: [placeholder_command_code]"
    sleep 5
  done
}

# Parse arguments
if [[ "$1" == "--watch" ]]; then
  watch_mode
else
  generate_modules
fi
